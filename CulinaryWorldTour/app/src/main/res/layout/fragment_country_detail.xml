<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nilskuijpers.culinaryworldtour.Fragments.SubViews.CountryDetailFragment">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_alignParentStart="true"
                android:id="@+id/countryNamePlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="Country Name Placeholder"
                />

            <TextView
                android:layout_below="@id/countryNamePlaceholder"
                android:id="@+id/countryCapitalPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#a8a8a8"
                android:text="Capital Name Placeholder" />

            <TextView
                android:layout_below="@id/countryCapitalPlaceholder"
                android:id="@+id/countryPopPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#a8a8a8"
                android:text="Population Placeholder" />

            <ImageView
                android:id="@+id/detailViewCountryFlag"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_width="0dp"
                app:layout_widthPercent="25%"
                android:layout_height="wrap_content" />

        </android.support.percent.PercentRelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
